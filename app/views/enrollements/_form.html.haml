-# frozen_string_literal: true
= simple_form_for(@enrollement) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :user
    = f.association :course
    = f.input :rating
    = f.input :review
    = f.input :price

  .form-actions
    = f.button :submit
